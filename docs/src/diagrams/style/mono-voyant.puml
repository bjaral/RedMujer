' ===== TEMA: MonoVoyant =====
' Estilo monocromático elegante basado en tonalidades púrpura

' ===== PALETA MONOCROMÁTICA =====
' Color primario (púrpura base)
!$primary = "#7E57C2"  
!$primary_light = "#B39DDB"
!$primary_lighter = "#D1C4E9"
!$primary_lightest = "#EDE7F6"
!$primary_dark = "#5E35B1"
!$primary_darker = "#4527A0"
!$primary_darkest = "#311B92"

' Escala de grises derivada del primario
!$bg_dark = "#0F0B1A"  
!$bg_medium = "#1A1526"  
!$bg_light = "#262033"  
!$bg_lighter = "#332D40"  

' Texto optimizado
!$text_primary = "#F5F3FF"  
!$text_secondary = "#D1C4E9"  
!$text_highlight = "#FFFFFF"  

' tono intermedio
!$intermediate_bg = "#4A148C"
!$intermediate_line = "#B39DDB"
!$intermediate_font = "#F5F3FF"

' enums
!$enum_bg = "#6A1B9A"
!$enum_line = "#EDE7F6"
!$enum_font = "#F5F3FF"



' Estados del sistema (tonalidades del primario)
' Verde suave para contraste necesario
!$accent_success = "#8BC34A"  
' Amarillo suave para contraste necesario
!$accent_warning = "#FFC107" 
' Rojo suave para contraste necesario 
!$accent_error = "#E53935"  

' ===== TIPOGRAFÍA =====
!$font_main = "'Roboto', 'Segoe UI', sans-serif"
!$font_title_size = 26
!$font_large = 18
!$font_medium = 15
!$font_small = 12

' ===== GEOMETRÍA =====
!$border_radius = 10
!$border_thickness = 2.5
!$arrow_thickness = 2
!$arrow_head_size = 7
!$shadow_intensity = 25

skinparam Shadowing true
skinparam Handwritten false
skinparam actorStyle awesome
skinparam monochrome false

<style>

' ================================================
' ================ GLOBAL CONFIG ================
' ================================================
root {
  BackgroundColor $bg_dark
  LineColor $primary_lighter
  FontName $font_main
  FontSize $font_medium
  FontColor $text_primary
}

' ================================================
' ============== SHARED ELEMENTS ================
' ================================================
rectangle, activity, object, component, node, cloud, package, file, usecase {
  BackgroundColor $bg_medium
  LineColor $primary
  FontColor $text_primary
  RoundCorner $border_radius
  BorderThickness $border_thickness
}

actor {
  Style awesome
  BackgroundColor $bg_medium
  LineColor $primary_light
  FontColor $text_highlight
  RoundCorner 25
  FontStyle bold
}

database {
  BackgroundColor $bg_medium
  LineColor $primary_dark
  FontColor $text_primary
  RoundCorner $border_radius
}

participant {
  BackgroundColor $bg_light
  LineColor $primary_light
  FontColor $text_highlight
  RoundCorner 20
  FontStyle bold
}

diamond, activityDiamond {
  BackgroundColor $primary_darker
  LineColor $primary_light
  FontColor $text_highlight
  RoundCorner $border_radius
  FontStyle bold
}

partition, swimlane {
  BackgroundColor $bg_light
  LineColor $primary_dark
  FontColor $text_highlight
  LineThickness $border_thickness + 1
  RoundCorner $border_radius
}

arrow {
  LineColor $primary_light
  LineThickness $arrow_thickness
  FontColor $text_secondary
  FontStyle normal
}

note {
  BackgroundColor $primary_darker
  LineColor $primary
  FontColor $text_highlight
  RoundCorner $border_radius
}

' ================================================
' ============= DIAGRAMAS ENTIDAD-RELACIÓN ======
' ================================================
entity {
  BackgroundColor $bg_medium
  LineColor $primary_light
  FontColor $text_primary
  RoundCorner $border_radius
}

entity_header {
  BackgroundColor $primary_darker
  FontColor $text_highlight
  FontStyle bold
}

entity_attribute {
  BackgroundColor $bg_light
  FontColor $text_secondary
  FontSize $font_small
  RoundCorner $border_radius - 2
}

primary_key {
  BackgroundColor $primary_darkest
  FontColor $text_highlight
  FontStyle bold
}

foreign_key {
  BackgroundColor $primary_darker
  FontColor $text_highlight
  FontStyle italic
  LineStyle dashed
}

relationship {
  LineColor $primary_light
  LineThickness $arrow_thickness
  FontColor $text_secondary
  FontStyle italic
}

inheritance {
  LineColor $primary_lighter
  LineThickness $arrow_thickness + 1
  TriangleSize $arrow_head_size + 2
}

cardinality {
  FontColor $primary_light
  FontSize $font_small
  FontStyle italic
}

' **Estilo para tablas intermedias (asociación)**
.intermedias {
  BackgroundColor $intermediate_bg
  LineColor $intermediate_line
  FontColor $intermediate_font
  RoundCorner $border_radius
  FontStyle bold
  LineStyle dotted
}

' **Estilo para tablas enumEntity (enumeraciones)**
.enumEntity {
  BackgroundColor $enum_bg
  LineColor $enum_line
  FontColor $enum_font
  RoundCorner 5
  FontStyle italic
}

' ================================================
' ============= USE CASE DIAGRAM STYLES ==========
' ================================================
usecase {
  BackgroundColor $bg_light
  LineColor $primary
  FontColor $text_highlight
  RoundCorner 20
}

.arrowInclude {
  LineColor $primary_light
  LineThickness $arrow_thickness
  LineStyle dashed
}

.arrowExtend {
  LineColor $primary_lighter
  LineThickness $arrow_thickness
  LineStyle dotted
}

' ================================================
' =========== ACTIVITY DIAGRAM STYLES ============
' ================================================
activityStart, activityEnd {
  BackgroundColor $primary_darkest
  LineColor $primary_light
  FontColor $text_highlight
  FontStyle bold
  RoundCorner 50
}

activityDecision {
  BackgroundColor $primary_darker
  LineColor $primary_light
  FontColor $text_highlight
  RoundCorner $border_radius
}

' ================================================
' ============== TÍTULOS Y LEYENDAS =============
' ================================================
title {
  LineColor $primary_light
  FontColor $text_highlight
  FontSize $font_title_size
  FontStyle bold
  Margin 20
  Padding 10
  BackgroundColor $bg_light
  RoundCorner $border_radius
}

legend {
  BackgroundColor $bg_light
  LineColor $primary
  RoundCorner $border_radius
  FontColor $text_secondary
}

legendTitle {
  FontColor $primary_light
  FontSize $font_large
  FontStyle bold
}

legendText {
  FontColor $text_secondary
  FontSize $font_small
}
</style>

skinparam stereotype<<E>> {
  BackgroundColor $primary_darker
  FontColor $text_highlight
  FontSize $font_small
  RoundCorner 5
}